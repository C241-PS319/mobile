<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Define text appearances -->
    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="halo_nama">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="dashboard_date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_bullet">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="heading_large_green" parent="TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="textAppearanceLineHeightEnabled">true</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <style name="main_button">
        <item name="android:background">@drawable/shape_radius_green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>