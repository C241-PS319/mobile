<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Define text appearances -->
    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
    </style>

    <style name="halo_nama">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="dashboard_date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_bullet">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="heading_large_green" parent="TextAppearance.Bold">
        <item name="android:textSize">24sp</item>
        <item name="textAppearanceLineHeightEnabled">true</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>




</resources>