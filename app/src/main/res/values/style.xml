<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Define text appearances -->
    <style name="text_regular">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="text_medium">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="text_bold">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="halo_nama">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="dashboard_date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="panduan_bullet">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#434347</item>
    </style>

    <style name="heading_large_green" parent="text_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="textAppearanceLineHeightEnabled">true</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <style name="heading_xlarge_green" parent="text_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="textAppearanceLineHeightEnabled">true</item>
        <item name="android:textColor">@color/primary_500</item>
    </style>

    <style name="heading_medium" parent="text_medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_800</item>
    </style>

    <style name="heading_sm" parent="text_bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_500</item>
    </style>

    <style name="main_button">
        <item name="android:background">@drawable/shape_radius_green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular_button">
        <item name="android:background">@drawable/shape_radius_green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_regular_xs" parent="text_regular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_500</item>
    </style>

    <style name="text_regular_sm" parent="text_regular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_800</item>
    </style>

    <style name="text_semibold_xs" parent="text_medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_semibold_sm" parent="text_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text_medium_xs" parent="text_medium">
        <item name="android:textSize">12sp</item>
    </style>






</resources>